<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFCFC"
    tools:context=".Mess.HomeForMessOwner">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">


                <androidx.cardview.widget.CardView
                    android:id="@+id/ConsumersBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/brandcolor"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/oneDayUsers">


                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/group" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya_sc_black"
                    android:text="@string/consumers"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/ConsumersBtn"
                    app:layout_constraintStart_toStartOf="@+id/ConsumersBtn"
                    app:layout_constraintTop_toBottomOf="@+id/ConsumersBtn" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView10"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginHorizontal="25dp"
                    android:outlineAmbientShadowColor="@color/white"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="2dp"
                    app:layout_constraintBottom_toTopOf="@+id/cardView8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/homelag" >


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="@font/alegreya_sc_black"
                            android:text="@string/total_subscribers"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView15"
                            app:layout_constraintEnd_toEndOf="@+id/textView15"
                            app:layout_constraintStart_toStartOf="@+id/textView15" />

                        <View
                            android:id="@+id/textView15"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/black"
                            android:fontFamily="@font/alegreya_sc_black"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/subscribers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alegreya_sc_black"
                            android:text="0"
                            android:textColor="@color/brandcolor"
                            android:textSize="35dp"
                            app:layout_constraintBottom_toTopOf="@+id/textView14"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/alegreya_sc_black"
                            android:text="@string/user_ratings"
                            android:textSize="14dp"
                            app:layout_constraintEnd_toEndOf="@+id/textView15"
                            app:layout_constraintStart_toStartOf="@+id/textView15"
                            app:layout_constraintTop_toTopOf="@+id/textView15" />

                        <RatingBar
                            android:id="@+id/myRatingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="3.7"
                            android:progressTint="@color/brandcolor"
                            app:layout_constraintEnd_toEndOf="@+id/textView16"
                            app:layout_constraintStart_toStartOf="@+id/textView16"
                            app:layout_constraintTop_toBottomOf="@+id/textView16" />

                        <TextView
                            android:id="@+id/ratingInNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alegreya_sc_black"
                            android:text="3.5"
                            android:textColor="@color/brandcolor"
                            android:textSize="30dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView16" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView8"
                    android:layout_width="match_parent"
                    android:layout_height="147dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="1dp"
                    app:layout_constraintBottom_toBottomOf="@+id/cardView7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView7" >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/diamond"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:background="@drawable/right_corner_round"
                            android:backgroundTint="@color/black"
                            android:textColor="@color/black"
                            android:textAllCaps="false"
                            android:fontFamily="@font/alegreya_sc_black"
                            android:text="@string/edit_ndimond_nplan"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/gold"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="2dp"
                            android:text="@string/edit_ngold_nplan"
                            android:textAllCaps="false"
                            android:fontFamily="@font/alegreya_sc_black"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/diamond"
                            app:layout_constraintStart_toEndOf="@+id/silver"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/silver"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:background="@drawable/left_corner_round"
                            android:text="@string/edit_n_silver_nplan"
                            android:textAllCaps="false"
                            android:fontFamily="@font/alegreya_sc_black"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView7"
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:backgroundTint="@color/brandcolor"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />




                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/brandcolor"
                    android:elevation="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/cardView7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/oneDayUsers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/one_day_users"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alegreya_sc_black"
                    android:background="@drawable/button_shape"
                    app:layout_constraintEnd_toStartOf="@+id/walletM"
                    app:layout_constraintStart_toStartOf="@+id/cardView8"
                    app:layout_constraintTop_toBottomOf="@+id/cardView8" />

                <Button
                    android:id="@+id/show_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/show_mess_qr"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alegreya_sc_black"
                    android:background="@drawable/button_shape"
                    app:layout_constraintEnd_toEndOf="@+id/cardView8"
                    app:layout_constraintStart_toEndOf="@+id/walletM"
                    app:layout_constraintTop_toBottomOf="@+id/cardView8" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/dailyMenu"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="48dp"
                    android:backgroundTint="@color/brandcolor"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ConsumersBtn">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/date_range" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya_sc_black"
                    android:text="@string/support"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/support"
                    app:layout_constraintHorizontal_bias="0.529"
                    app:layout_constraintStart_toStartOf="@+id/support"
                    app:layout_constraintTop_toBottomOf="@+id/support" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya_sc_black"
                    android:text="@string/settings"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/settings"
                    app:layout_constraintStart_toStartOf="@+id/settings"
                    app:layout_constraintTop_toBottomOf="@+id/settings" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/sendMSG"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="25dp"
                    android:backgroundTint="@color/brandcolor"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/show_qr">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/chat_plus_fill" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya_sc_black"
                    android:text="@string/wallet"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/walletM"
                    app:layout_constraintStart_toStartOf="@+id/walletM"
                    app:layout_constraintTop_toBottomOf="@+id/walletM" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/walletM"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/brandcolor"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="1dp"
                    app:layout_constraintEnd_toStartOf="@+id/sendMSG"
                    app:layout_constraintStart_toEndOf="@+id/ConsumersBtn"
                    app:layout_constraintTop_toBottomOf="@+id/show_qr">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/wallet_alt_fill" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya_sc_black"
                    android:text="@string/send_message"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/sendMSG"
                    app:layout_constraintStart_toStartOf="@+id/sendMSG"
                    app:layout_constraintTop_toBottomOf="@+id/sendMSG" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/homelag"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="25dp"
                    app:cardCornerRadius="13dp"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="9dp"
                        app:srcCompat="@drawable/language" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/notification"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="13dp"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toStartOf="@+id/homelag"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="9dp"
                        app:srcCompat="@drawable/gridicons_bell__1_" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    app:cardCornerRadius="17dp"
                    app:cardElevation="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageView
                        android:id="@+id/profileimg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:background="@drawable/button_shape"
                        android:clipToOutline="true"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/cooking" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/messName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:elevation="5dp"
                    android:fontFamily="@font/alegreya_sc_black"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="@+id/profile"
                    app:layout_constraintEnd_toStartOf="@+id/notification"
                    app:layout_constraintStart_toEndOf="@+id/profile"
                    app:layout_constraintTop_toTopOf="@+id/profile" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/settings"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="25dp"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="1dp"
                    android:backgroundTint="@color/brandcolor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sendMSG"   >


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/setting_fill" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/support"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="48dp"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="1dp"
                    android:backgroundTint="@color/brandcolor"
                    app:layout_constraintEnd_toStartOf="@+id/settings"
                    app:layout_constraintStart_toEndOf="@+id/dailyMenu"
                    app:layout_constraintTop_toBottomOf="@+id/walletM">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/mdi_support" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya_sc_black"
                    android:text="@string/daily_menu"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/dailyMenu"
                    app:layout_constraintStart_toStartOf="@+id/dailyMenu"
                    app:layout_constraintTop_toBottomOf="@+id/dailyMenu" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/alegreya_sc_black"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView33" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>